{
    "gitbook": "2.2.x",
    "plugins": [
        "toc",
        "localized-footer"
    ],
    "pluginsConfig": {
        "toc": {
            "addClass": true,
            "className": "toc"
        },
        "localized-footer": {
            "filename": "../FOOTER.md" // optional, defaults to "FOOTER.md"
                                    // may also be a relative path to the book root
        }
    }
}